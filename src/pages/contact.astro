---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps2 from '~/components/widgets/Steps2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <Steps2
    items={[
      {
        title: 'Email Support',
        description: 'support@habisos.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Follow Us',
        description: 'https://www.linkedin.com/company/habisos',
        icon: 'tabler:brand-linkedin',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to assist you!"
    items={[
      {
        title: 'General support',
        description: `Reach out to us for inquiries related to account management, subscription details, accessing features, or any general questions about using Habisos for managing your projects and tasks.`,
      },
      {
        title: 'Sales and pricing',
        description:
          'Contact us for questions about pricing plans, subscription options, feature availability, or any other inquiries related to purchasing or upgrading your plan.',
      },
      {
        title: 'Technical support',
        description:
          'Get in touch for assistance with technical issues, such as platform access, app integrations, data synchronization, or any other challenges you might face while using Habisos.',
      },
    ]}
  />
</Layout>
