---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Plans"
    title="Tailored Pricing for Every Need"
    subtitle="Select the ideal plan to fuel your ambitions and achieve success."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our Pricing Plans"
    subtitle="Solutions tailored for businesses of all sizes"
    prices={[
      {
        title: 'Freelancers',
        subtitle: 'Ideal for individual users or freelancers',
        price: 19,
        period: 'per month',
        items: [
          {
            description: '1 user included',
          },
          {
            description: 'Efficient job and task management',
          },
          {
            description: 'Basic analytics and reporting',
          },
          {
            description: 'Email support',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Try it free for 30 days',
          href: 'https://app.habisos.com/register?plan=Starter&utm_source=website&utm_medium=pricing_button&lang=en',
        },
      },
      {
        title: 'Small Businesses',
        subtitle: 'Perfect for teams of up to 10 users',
        price: 49,
        period: 'per month',
        items: [
          {
            description: 'Up to 10 users included',
          },
          {
            description: 'Efficient job and task management',
          },
          {
            description: 'Detailed analytics and reporting',
          },
          {
            description: 'Priority email and chat support',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Try it free for 30 days',
          href: 'https://app.habisos.com/register?plan=Business&utm_source=website&utm_medium=pricing&lang=en',
        },
      },
      {
        title: 'Large Enterprises',
        subtitle: 'Custom solutions for larger organizations',
        items: [
          {
            description: 'Unlimited users',
          },
          {
            description: 'Custom integrations and features',
          },
          {
            description: 'Dedicated account manager',
          },
          {
            description: '24/7 support and SLA',
          },
        ],
        callToAction: {
          target: '',
          text: 'Contact Sales',
          href: '/contact',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Pricing Features"
    subtitle="Explore the benefits of choosing the right plan for your needs"
    columns={2}
    items={[
      {
        title: 'Flexible Pricing Tiers',
        description: 'Select from a variety of plans tailored to fit your budget and specific requirements.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Clear and Transparent Pricing',
        description: 'Know exactly what you are paying for, with no hidden fees or surprise charges.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Payment Options',
        description: 'Your payment information is protected with top-tier security during each transaction.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Immediate Access',
        description: 'Get instant access to your selected planâ€™s features and templates after subscribing.',
        icon: 'tabler:accessible',
      },
      {
        title: 'Seamless Upgrades',
        description:
          'Easily upgrade to higher plans to unlock additional features and benefits for a richer experience.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '24/7 Support',
        description: 'Our team is available around the clock through live chat, email, or phone to assist you.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Choosing the right plan is important, and we're here to answer your questions. If you have queries about our pricing options, you're in the right place."
    columns={1}
    items={[
      {
        title: 'Do the plans include customer support?',
        description:
          'Yes, all our plans come with access to dedicated customer support to assist you with any questions or concerns.',
      },
      {
        title: 'Is there a trial period for the different plans?',
        description:
          'Yes, we offer a 30-day free trial for all our plans. You can explore the features and benefits before making a commitment.',
      },
      {
        title: 'Can I switch between plans?',
        description:
          'Absolutely! You can upgrade or downgrade your plan anytime to find the one that best fits your needs.',
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'We accept major credit cards and online payment methods to ensure a secure and convenient transaction process.',
      },
      {
        title: 'Are there any hidden fees beyond the listed cost?',
        description:
          'No, the subscription price covers everything listed in each plan. There are no hidden fees or additional charges.',
      },
    ]}
  />

</Layout>
